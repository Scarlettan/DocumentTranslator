<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox fx:id="rootNode" alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="documenttranslator.controllers.FileBasketController">
   <children>
      <Label text="Select a file to translate:">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <HBox spacing="10.0">
         <children>
            <TextField fx:id="inputFileUrl" editable="false" HBox.hgrow="ALWAYS" />
            <Button fx:id="buttonSelectFile" mnemonicParsing="false" text="Select File..." />
         </children>
      </HBox>
      <Label text="-- OR --">
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </Label>
      <HBox fx:id="inputDropBox" alignment="CENTER" minHeight="200.0" minWidth="300.0" style="-fx-border-width: 3; -fx-border-style: dashed; -fx-border-color: #ccc;" VBox.vgrow="ALWAYS">
         <children>
            <Label fx:id="labelDropBox" text="Drag and drop a file here!" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>

      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Label text="Document Translator">
               <font>
                  <Font name="System Bold" size="12.0" />
